<section id="messages">

    <!-- Success Messages -->
    {% if session('success') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
                {{ t(session('success'))|markdown }}
        </div>
    {% endif %}

    <!-- Informational Messages -->
    {% if session('info') %}
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
                {{ t(session('info'))|markdown }}
        </div>
    {% endif %}


    <!-- Warning Messages -->
    {% if session('warning') %}
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
                {{ t(session('warning'))|markdown }}
        </div>
    {% endif %}


    <!-- Error Messages -->
    {% if session('error') %}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
                {{ t(session('error'))|markdown }}
        </div>
    {% endif %}

</section>
