 <div class="product-filter-dropdown">
		<div class="filter-dropdown-trigger-hold">
			 <div class="filter-dropdown-trigger"></div>
			 <div class="filter-dropdown-trigger-text">{{t('brands')}} <span></span></div>
			 <div class="filter-dropdown-trigger-clear">{{t('clear')}}</div>
		</div>
		<div class="filter-dropdown-content">
			 <ul>
				 {% for brand in entries('products', 'products').where('enabled', 1).where('component_group_id', item.id).groupBy('brand_id').get() %}
					 {% set count_bra = entries('products', 'products').where('enabled', 1).where('brand_id', brand.brand.id).where('component_group_id', item.id).count() %}
					  <li>
							  <div class="filter-dropdown-checkbox">
									<input id="filter-dropdown-brand-{{ loop.index }}" name="brand" type="checkbox" value="{{brand.brand.id}}"><label for="filter-dropdown-brand-{{ loop.index }}">{{brand.brand.title}} <span>({{count_bra}})</span></label>
							  </div>
						 </li>
				  {% endfor %}
			 </ul>
		</div>
  </div>